//CHECK MARKS
#include<iostream>
using namespace std;
int main() {
    int i,num;
    int m[5];
    for (i=0;i<=4;i++)
    {
        cout<<"ENTER STUDENT MARKS"<<endl;
        cin>>m[i];
    }
    cout<<"ENTER NUMBER TO BE CHECKED ";
    cin>>num;
    for (i=0;i<=4;i++)
    {
        if (num==m[i])
        {
        cout<<"NUMBER IS THERE at"<<i+1<<" postion";
        break;
        }
        if (i==5)
        {
        cout<<"NUMBER IS not THERE";
        break;
        }

    }
}

